{{define "chat"}}
<div class="container">
    <div id="chat">
        <div class="input-group">
            <span class=input-group-btn>
                <button class="btn btn-default" type="button" id="chatnamebtn"><i class="fa fa-user" aria-hidden="true"></i></button>
            </span>
            <input class="form-control" type="text" id="chatname"></input>
        </div>
        <div class="border-bottom-0" id="chatlog">
            <div class="chat-notification">Welcome to the chat! Please be nice!</div>
        </div>
        <div class="input-group">
            <input class="form-control" type="text" id="chatmsg"></input>
            <span class=input-group-btn>
                <button class="btn btn-default" type="button" id="chatsend"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
            </span>
        </div>
    </div>
</div>
{{end}}